<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="zhou.com.snailbook.ui.activity.SubCategoryListActivity">

    <include layout="@layout/common_toolbar" />

    <zhou.com.snailbook.view.RVPIndicator
        android:id="@+id/indicatorSub"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        app:indicator_color="@color/common_bg"
        app:indicator_style="triangle"
        app:item_count="4"
        app:text_color_hightlight="@color/white"
        app:text_color_normal="@color/light_gray" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerSub"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
